lemma exists_maximalIdeal_pow_le_of_finite_quotient (I : Ideal R) [Finite (R ‚ß∏ I)] :
    ‚àÉ n, (maximalIdeal R) ^ n ‚â§ I := by
  by_cases hI : I = ‚ä§
  ¬∑ simp [hI]
  have : Nontrivial (R ‚ß∏ I) := Ideal.Quotient.nontrivial hI
  have := IsLocalRing.of_surjective' (Ideal.Quotient.mk I) Ideal.Quotient.mk_surjective
  have := IsLocalHom.of_surjective (Ideal.Quotient.mk I) Ideal.Quotient.mk_surjective
  obtain ‚ü®n, hn‚ü© := IsArtinianRing.isNilpotent_jacobson_bot (R := R ‚ß∏ I)
  have : (maximalIdeal R).map (Ideal.Quotient.mk I) = maximalIdeal (R ‚ß∏ I) := by
    ext x
    obtain ‚ü®x, rfl‚ü© := Ideal.Quotient.mk_surjective x
    simp [sup_eq_left.mpr (le_maximalIdeal hI)]
  rw [jacobson_eq_maximalIdeal _ bot_ne_top, ‚Üê this, ‚Üê Ideal.map_pow, Ideal.zero_eq_bot,
    Ideal.map_eq_bot_iff_le_ker, Ideal.mk_ker] at hn
  exact ‚ü®n, hn‚ü©

